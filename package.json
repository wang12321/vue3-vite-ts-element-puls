{
  "name": "vue3-vite",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "lint:eslint": "eslint \"src/**/*.{ts,tsx,js,json,vue}\" --fix",
    "lint:prettier": "prettier --write --loglevel warn \"src/**/*.{js,json,tsx,ts,css,scss,vue,html,md}\""
  },
  "dependencies": {
    "element-plus": "^1.1.0-beta.18",
    "eslint": "^6.8.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-vue": "^7.19.1",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "vite-plugin-style-import": "^1.2.1",
    "vue": "^3.2.19",
    "vue-router": "^4.0.11",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "~11.0.0",
    "@commitlint/config-conventional": "~11.0.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@types/node": "^16.10.2",
    "@vue/compiler-sfc": "^3.2.19",
    "sass": "^1.42.1",
    "@vitejs/plugin-vue": "^1.9.2",
    "unplugin-vue-components": "^0.15.4",
    "typescript": "^4.4.3",
    "vite": "^2.6.0",
    "vue-tsc": "^0.3.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint --config commitlint.config.js -e -V"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "eslint \"src/**/*.{ts,tsx,js,json,vue}\" --fix",
      "git add ."
    ]
  }
}
